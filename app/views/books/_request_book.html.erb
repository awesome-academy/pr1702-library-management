<div class="container-fluid">
  <div class="col-sm-9">
    <h3><%= @book.name %> - <%= @book.author.name %></h3>
    <div class="col-sm-3">
      <div class="thumbnail">
        <%= image_tag @book.image %>
      </div>
    </div>
    <div class="col-sm-9">
      <h5><%= t ".author" %>: <%= link_to @book.author.name %></h5>
      <h5><%= t ".category" %>: <%= link_to @book.category.name %></h5>
      <h5><%= t ".publisher" %>: <%= link_to @book.publisher.name %></h5>
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal"><%= t ".request" %></button>
      <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title"><%= t ".return" %></h4>
            </div>
            <div class="modal-body">
              <%= form_for @book.borrows.new do |f| %>
                <%= render "shared/error_messages", object: @book %>
                <%= f.hidden_field :book_id, value: @book.id %>
                <%= f.label :date %>
                <%= f.date_field :date %>
                <%= f.submit t(".save"), class: "btn btn-primary" %>
              <% end %>
            </div>
            <div class="modal-footer">
              <%= button_tag "Close", class: "btn btn-default" %>
            </div>
          </div>
        </div>
      </div>
      <p><%= @book.description %></p>
      <p><%= t ".invite_read" %>
      <strong><%= @book.author.name %> - <%= @book.name %>!</strong></p>
    </div>
    <div class="col-sm-12">
      <h4><%= t ".comment" %>:</h4>
      <form role="form">
        <div class="form-group">
          <textarea class="form-control" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-success"><%= t ".submit" %></button>
      </form>
    </div>
  </div>
</div>
